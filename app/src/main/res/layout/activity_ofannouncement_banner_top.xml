<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/plainwhite"
                app:cardCornerRadius="0dp"
                app:cardElevation="14dp"
                app:cardUseCompatPadding="false">

                <RelativeLayout
                    android:id="@+id/view_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <RelativeLayout
                        android:id="@+id/inner_child_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@id/close_btn_image_view">

                        <com.oneflow.analytics.customwidgets.OFCustomTextViewBold
                            android:id="@+id/tvTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:paddingTop="@dimen/of_field_padding"
                            android:paddingBottom="@dimen/of_field_padding"
                            android:paddingRight="@dimen/of_field_padding"
                            android:paddingLeft="@dimen/of_field_padding"
                            android:textStyle="bold"
                            android:textColor="@color/txtblack"
                            android:textSize="@dimen/of_page_sub_header_2" />

                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/close_btn_image_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_baseline_close_24" />

                </RelativeLayout>

            </androidx.cardview.widget.CardView>
        </RelativeLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>