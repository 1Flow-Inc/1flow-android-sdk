<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/announcement_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ProgressBar
            android:layout_height="50dp"
            android:layout_width="50dp"
            android:id="@+id/progress_circular"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            android:layout_marginTop="50dp" />

        <com.oneflow.analytics.customwidgets.OFCustomTextViewBold
            android:id="@+id/tvEmpty"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Your inbox is empty."
            android:gravity="center"
            android:paddingTop="@dimen/of_field_padding"
            android:paddingBottom="@dimen/of_field_padding"
            android:paddingRight="@dimen/of_field_padding"
            android:paddingLeft="@dimen/of_field_padding"
            android:textStyle="bold"
            android:visibility="gone"
            android:textColor="#66000000"
            android:textSize="@dimen/of_page_sub_header_2" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/bottom_water_mark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_gravity="center_horizontal"
        android:background="@drawable/btn_rounded_rectangle_watermark"
        android:gravity="center_vertical"
        android:padding="10dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/powered_by" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="@string/powered_by"
            android:textColor="@color/powored_by_txt_color" />
    </LinearLayout>
</LinearLayout>

