<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"


>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/event_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:boxBackgroundColor="@android:color/transparent"
        android:background="@android:color/transparent"
        app:hintEnabled="true"
        android:layout_margin="10dp">

        <com.oneflow.analytics.customwidgets.OFCustomEditText
            android:id="@+id/event_name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Enter event here"
            android:inputType="textEmailAddress"
            android:paddingLeft="5dp"
            android:text=""
            android:textSize="16sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:id="@+id/list_of_params"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/event_name"
        android:visibility="visible"
        android:orientation="vertical"
        />

    <com.oneflow.analytics.customwidgets.OFCustomTextView
        android:id="@+id/add_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:onClick="clickHandler"
        android:layout_alignParentRight="true"
        android:padding="10dp"
        android:textColor="@color/purple_700"
        android:text="Add More"
        android:layout_below="@id/list_of_params"

         />


    <com.oneflow.analytics.customwidgets.OFCustomTextView
        android:id="@+id/init_survey"
        style="@style/of_comman_positive_button_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_selector"
        android:layout_margin="8dp"
        android:onClick="clickHandler"
        android:padding="10dp"
        android:text="Record Event"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:visibility="visible" />



</RelativeLayout>