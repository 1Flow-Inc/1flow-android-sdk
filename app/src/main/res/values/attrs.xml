<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="lpv_general">
        <attr name="errorTimeOutDur" format="integer"/>
        <attr name="secretModeEnable" format="boolean"/>
        <attr name="secondPassDialogEnable" format="boolean"/>
        <attr name="showPassStr" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="lpv_btn">
        <attr name="btnTextColor" format="color" />
        <attr name="btnBgResource" format="reference" />

        <attr name="btnCancelStr" format="string" />
        <attr name="btnConfirmStr" format="string" />
        <attr name="btnRepeatStr" format="string" />
    </declare-styleable>
    <declare-styleable name="lpv_forgotPass">
        <attr name="forgotPassColor" format="color" />
        <attr name="forgotPassTitleStr" format="string" />
        <attr name="forgotPassFailedStr" format="string" />
        <attr name="forgotPassSuccessStr" format="string" />
    </declare-styleable>
    <declare-styleable name="lpv_main">
        <attr name="dotAnimScaleMax" format="float"/>
        <attr name="dotRadius" format="integer"/>
        <attr name="dotLineWidth" format="integer"/>
        <attr name="mainBgRadius" format="integer"/>
        <attr name="mainBgLineWidth" format="integer"/>
        <attr name="dotMinCount" format="integer"/>
        <attr name="dotVibrateDur" format="integer"/>
        <attr name="errorVibrateDur" format="integer"/>
        <attr name="toShortPatternStr" format="string" />

        <attr name="dotNormalColor" format="color" />
        <attr name="dotTouchedColor" format="color" />
        <attr name="dotErrorColor" format="color" />

        <attr name="mainIsBgEnable" format="boolean"/>
        <attr name="dotVibrateEnable" format="boolean"/>
        <attr name="errorVibrateEnable" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="lpv_status">
        <attr name="statusNormalColor" format="color" />
        <attr name="statusErrorColor" format="color" />
        <attr name="statusSetNewPatternStr" format="string" />
        <attr name="statusConfirmPatternStr" format="string" />
        <attr name="statusErrorPatternStr" format="string" />
    </declare-styleable>
    <declare-styleable name="lpv_dialog">
        //dialog general
        <attr name="dialogTitleColor" format="color"/>
        <attr name="dialogMessageColor" format="color"/>
        <attr name="dialogTextColor" format="color"/>
        <attr name="dialogButtonsColor" format="color"/>
        <attr name="dialogMinAnswerLength" format="integer"/>
        <attr name="dialogMaxAnswerLength" format="integer"/>

        //dialog secondPass
        <attr name="dialogRadioBtnColor" format="color"/>
        <attr name="dialogSecondPassTitleStr" format="string"/>
        <attr name="dialogSecondPassMessageStr" format="string"/>
        <attr name="dialogSecondPassPositiveStr" format="string"/>
        <attr name="dialogSecondPassNegativeStr" format="string"/>
        <attr name="dialogQuestionsArray" format="reference"/>

        //dialog passRestore
        <attr name="dialogPassRestoreTitleStr" format="string"/>
        <attr name="dialogPassRestoreMessageStr" format="string"/>
        <attr name="dialogPassRestorePositiveStr" format="string"/>
        <attr name="dialogPassRestoreNegativeStr" format="string"/>
    </declare-styleable>

    <declare-styleable name="lpv_logo">
        <attr name="lpv_logo" format="reference"/>
    </declare-styleable>
    <declare-styleable name="crlriv">
        <attr name="border" format="boolean"/>
        <attr name="border_width" format="dimension"/>
        <attr name="border_color" format="color"/>
        <attr name="shadow" format="boolean"/>
        <attr name="shadow_color" format="color"/>
        <attr name="shadow_radius" format="float"/>
    </declare-styleable>
    <declare-styleable name="Theme">
        <attr name="circularImageViewStyle" format="reference"/>
    </declare-styleable>


    <declare-styleable name="EditTextStyle">
        <attr name="android:textSelectHandleLeft"/>
        <attr name="android:textSelectHandleRight"/>
        <attr name="android:textSelectHandle"/>
    </declare-styleable>



    <declare-styleable name="CropImageView">
        <attr name="cropGuidelines">
            <enum name="off" value="0"/>
            <enum name="onTouch" value="1"/>
            <enum name="on" value="2"/>
        </attr>
        <attr name="cropScaleType">
            <enum name="fitCenter" value="0"/>
            <enum name="center" value="1"/>
            <enum name="centerCrop" value="2"/>
            <enum name="centerInside" value="3"/>
        </attr>
        <attr name="cropShape">
            <enum name="rectangle" value="0"/>
            <enum name="oval" value="1"/>
        </attr>
        <attr name="cropAutoZoomEnabled" format="boolean"/>
        <attr name="cropMaxZoom" format="integer"/>
        <attr name="cropMultiTouchEnabled" format="boolean"/>
        <attr name="cropFixAspectRatio" format="boolean"/>
        <attr name="cropAspectRatioX" format="integer"/>
        <attr name="cropAspectRatioY" format="integer"/>
        <attr name="cropInitialCropWindowPaddingRatio" format="float"/>
        <attr name="cropBorderLineThickness" format="dimension"/>
        <attr name="cropBorderLineColor" format="color"/>
        <attr name="cropBorderCornerThickness" format="dimension"/>
        <attr name="cropBorderCornerOffset" format="dimension"/>
        <attr name="cropBorderCornerLength" format="dimension"/>
        <attr name="cropBorderCornerColor" format="color"/>
        <attr name="cropGuidelinesThickness" format="dimension"/>
        <attr name="cropGuidelinesColor" format="color"/>
        <attr name="cropBackgroundColor" format="color"/>
        <attr name="cropSnapRadius" format="dimension"/>
        <attr name="cropTouchRadius" format="dimension"/>
        <attr name="cropSaveBitmapToInstanceState" format="boolean"/>
        <attr name="cropShowCropOverlay" format="boolean"/>
        <attr name="cropShowProgressBar" format="boolean"/>
        <attr name="cropMinCropWindowWidth" format="dimension"/>
        <attr name="cropMinCropWindowHeight" format="dimension"/>
        <attr name="cropMinCropResultWidthPX" format="float"/>
        <attr name="cropMinCropResultHeightPX" format="float"/>
        <attr name="cropMaxCropResultWidthPX" format="float"/>
        <attr name="cropMaxCropResultHeightPX" format="float"/>
        <attr name="cropFlipHorizontally" format="boolean"/>
        <attr name="cropFlipVertically" format="boolean"/>
    </declare-styleable>


</resources>

